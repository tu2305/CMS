<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record id="view_order_tree" model="ir.ui.view">
            <field name="name">order.tree</field>
            <field name="model">cms.order</field>
            <field name="priority" eval="8"/>
            <field name="arch" type="xml">
                <tree string="Order">
                    <field name="code"/>
                    <field name="date"/>
                    <field name="status" class="oe_highlight"/>
                </tree>
            </field>
        </record>
        <record id="view_order_form" model="ir.ui.view">
            <field name="name">order.form</field>
            <field name="model">cms.order</field>
            <field name="priority" eval="8"/>
            <field name="arch" type="xml">
                <form string="Order">
                    <sheet>
                        <group>
                            <header>
                                <field name="status" widget="statusbar"/>
                            </header>
                        </group>
                        <group col="4" style="width:70%%">
                            <field name="code"/>
                            <field name="user_id"/>
                            <field name="date"/>
                        </group>
                        <group col="6" attrs="{'invisible':[('status','!=','order')]}">
                            <field name="product_category_id" widget="radio" col="4"/>
                            <field name="product_id" widget="radio" col="4"/>
                            <span style="width:30%%">
                                <button string="Choose Product" type="object"
                                        name="choose_product_button" class="oe_highlight"/>
                            </span>
                        </group>
                        <group string="List Order" colspan="4" col="4">
                            <group style="width:70%%">
                                <field name="order_detail_ids" nolabel="1"
                                       attrs="{'readonly':[('status','!=','order')]}">
                                    <tree editable="false" create="false">
                                        <field name='product_id'/>
                                        <field name='quantity'/>
                                        <field name='price'/>
                                    </tree>
                                </field>
                            </group>
                            <group class="oe_right">
                                <field name='total_price' style="width:150%%"/>
                                <field name="pay" style="width:150%%"
                                       attrs="{'invisible':['|',('status','=','order'),('status','=','cancel')],'readonly':[('status','=','paid')]}"/>
                                <field name="repay" style="width:150%%"
                                       attrs="{'invisible':['|',('status','=','order'),('status','=','cancel')],'readonly':[('status','=','paid')]}"/>
                                <span>
                                    <button string="Payment" type="object" name="payment" class="oe_highlight"
                                            attrs="{'invisible':[('status','!=','order')]}"/>
                                    <button string="Paid and print" type="object" name="paid" class="oe_highlight"
                                            attrs="{'invisible':[('status','!=','payment')]}"/>
                                    <button string="Return" type="object" name="order" class="oe_highlight"
                                            attrs="{'invisible':[('status','!=','payment')]}"/>
                                </span>
                            </group>
                        </group>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>
        <record id="view_order_search" model="ir.ui.view">
            <field name="name">order.search</field>
            <field name="model">cms.order</field>
            <field name="priority" eval="8"/>
            <field name="arch" type="xml">
                <search string="Order">
                    <field name="code"/>
                    <field name="user_id"/>
                    <field name="date"/>
                </search>
            </field>
        </record>
        <record model="ir.actions.act_window" id="act_open_order_view">
            <field name="name">Order</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">cms.order</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="search_view_id" ref="view_order_search"/>
            <field name="domain">[]</field>
            <field name="context">{}</field>
        </record>
        <record model="ir.actions.act_window.view" id="act_open_order_view_form">
            <field name="act_window_id" ref="act_open_order_view"/>
            <field name="sequence" eval="20"/>
            <field name="view_mode">form</field>
            <field name="view_id" ref="view_order_form"/>
        </record>
        <record model="ir.actions.act_window.view" id="act_open_order_view_tree">
            <field name="act_window_id" ref="act_open_order_view"/>
            <field name="sequence" eval="10"/>
            <field name="view_mode">tree</field>
            <field name="view_id" ref="view_order_tree"/>
        </record>
    </data>
</odoo>